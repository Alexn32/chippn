{
  "expo": {
    "name": "Chippn",
    "slug": "chippn",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTabletMode": true,
      "bundleIdentifier": "com.alexn32.chippn",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access to verify chore completion photos",
        "NSPhotoLibraryUsageDescription": "We need photo library access to upload chore verification images",
        "NSPhotoLibraryAddOnlyUsageDescription": "We need permission to save photos"
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "team": "935300545"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.chippn.app",
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-notifications",
      "expo-image-picker",
      "expo-camera",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to upload chore verification images.",
          "cameraPermission": "The app accesses your camera to take chore completion photos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "c0dd4e78-c4ba-4e10-95c8-0b9e0f6d8e1f"
      }
    }
  }
}
